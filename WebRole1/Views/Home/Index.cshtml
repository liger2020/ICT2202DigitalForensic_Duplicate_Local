@model dynamic
@{
    ViewBag.Title = "Home Page";
}

<h2>@ViewBag.Message</h2>
<div style="margin-top:20px">
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Case ID</th>
                <th>More Info</th>
            </tr>
            <tr>
                @if (Model.listcase != null)
                {
                    for (int i = 0; i < Model.listcase.Cases.Count; i++)
                    {
                        <th>@Model.listcase.Cases[i]</th>
                        <th>@Html.ActionLink("Case Info", "GetCaseID", "Home", new { case_id = Model.listcase.Cases[i] }, null)</th>
                    }
                }
            </tr>
        </thead>
    </table>
    <div>
        @Html.ActionLink("Upload New Case", "UploadCase")
    </div>
</div>